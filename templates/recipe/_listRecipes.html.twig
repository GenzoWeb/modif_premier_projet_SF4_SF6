<div class="list-recipes">
    {% for recipe in recipes %}
        <div class="block-recipe-list">
            {% if recipe.name |length > 40 %}
                <a class="title-recipe-list d-flex justify-content-center" href="{{ path('recipe_show', {'id': recipe.id}) }}">{{ recipe.name |split(' ')|slice(0, 5)|join(' ') ~ '...' }}</a>
            {% else %}
                <a class="title-recipe-list d-flex justify-content-center" href="{{ path('recipe_show', {'id': recipe.id}) }}">{{ recipe.name }}</a>
            {% endif %}
            <div class="image-list-recipes mt-3">
                <a href="{{ path('recipe_show', {'id': recipe.id}) }}">
                    {% if recipe.filename %}
                        <img class="miniature-img" src="{{ asset('images/recipes/' ~ recipe.filename) }}" >
                    {% else %}
                        <img class="miniature-img" src="{{ asset('images/recipes/' ~ recipe.category.name | replace({'entrÃ©es': 'entrees' }) ~ '.jpg') }}" >
                    {% endif %}
                </a>
            </div>
        </div>
    {% endfor %}
</div>